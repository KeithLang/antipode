<p id="notice"><%= notice %></p>

<h1>Listing News</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Party</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        
        <% if news.topic == 'Latino' %>
        <td><%= news.link %>YES</td>
        <td><%= news.party %>YES</td>
        <td><%= news.topic %>YES</td>
        <br>
        <% else %>
        Hello
        <% end %>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

